
<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>甲壳虫装饰微站管理后台</title>
    <link href="@Url.Content("~/Css/Beetle/Manager/style.css")" rel="stylesheet" />
    @*<script src="@Url.Content("~/Scripts/Beetle/Manager/jquery.js")" charset="utf-8" type="text/javascript"></script>*@
    <script src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Beetle/Manager/global.js")" charset="utf-8" type="text/javascript"></script>
    @*<script src="@Url.Content("~/Scripts/Beetle/Manager/modal.js")" charset="utf-8" type="text/javascript"></script>*@  
    <script src="@Url.Content("~/Scripts/SPF.Helper.js")" type="text/javascript"></script>

    <link href="~/Css/reveal.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.reveal.js"></script>
    <script src="@Url.Content("~/Scripts/Beetle/Manager/ManagerHelper.js")" type="text/javascript"></script>
    

    @RenderSection("HeadElement", false)
    
</head>
<body>
    <div id="header">
        <div class="col w5 bottomlast">
            <span class="logo">甲壳虫装饰微站管理后台</span>
        </div>
        <div class="clear"></div>
    </div>
    <div id="wrapper">
        <div id="minwidth">
            <div id="holder">
                <div id="menu">
                    <div id="left"></div>
                    <div id="right"></div>
                    <ul id="ulUrl">
                        <li>
                            <a href="@Url.Action("ManagerClass","Beetle")" urltip="ManagerClassList" class="selected"><span>分类管理</span></a>
                        </li>
                        <li>
                            <a href="@Url.Action("ManagerClassContent", "Beetle")" urltip="ManagerClassContentList"><span>分类内容管理</span></a>
                        </li>
                        <li>
                            <a href="articles.html" urltip="articles"><span>...</span></a>
                        </li>
                    </ul>
                    <div class="clear"></div>
                </div>
                <script type="text/javascript">
                    $("#ulUrl a").each(function(index,item) {
                        if (document.URL.toLowerCase().indexOf($(item).attr("urltip").toLowerCase()) > -1) {
                            $(this).addClass("selected");
                        } else {
                            $(item).removeClass();
                        }
                    });
                </script>

                <div id="submenu">
                    <div class="modules_left">
                        <div class="module buttons">
                            @RenderSection("SubmenuElement",false)                   
                        </div>
                    </div>
                    <div class="title">
                        @ViewBag.Title
                    </div>
                    <div class="modules_right">
                    </div>
                </div>

                <div id="desc">
                    <div class="body">
                        @RenderBody()
                    </div> 
                </div>

                <div class="clear"></div>
                <div id="body_footer">
                    <div id="bottom_left"><div id="bottom_right"></div></div>
                </div>
            </div>
        </div>
    </div>
    <div id="footer">
        <p class="last">© 2014-2015 甲壳虫装饰版权所有</p>
    </div>

    @RenderSection("FootElement", false)
</body>
</html>